<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/edit.css">
    </head>
    <body>
        <%- include('partials/header.ejs') %>
        <div class="carrusel">
                <img src="/img/carrusel.jpg" alt="carrusel" class="carrusel-foto">
        </div>

        <div class="contenedor-create-form">
            <div class="">
                <div class="col-12">
                    <h2 class="products-title">Editar Producto</h2>
                </div>
            </div>
            <div class="col-12">
                <form action="/product/edit/<%= productoBuscado.id %>?_method=PATCH" method="POST">
                    <div class="row product-detail">
                        <div class="area col-12 col-md-6">
                            <label for="name" class="form-label">Nombre del producto:</label>
                            <input type="text" id="name" name="name" value="<%= productoBuscado.name %>" class="form-input">
                        </div>
                        <div class="area col-12 col-md-6">
                            <label for="price" class="form-label">Precio del producto:</label>
                            <input type="text" id="price" name="price" value="<%= productoBuscado.price %>" class="form-input">
                        </div>
                        <div class="area col-12 col-md-6">
                            <label for="discount" class="form-label">Descuento:</label>
                            <input type="text" id="discount" name="discount" value="<%= productoBuscado.discount %>" class="form-input">
                        </div>
                        <div class="area col-12 col-md-6">
                            <label for="category" class="form-label">Categoría:</label>
                            <select 
                                name="category" 
                                id="category" 
                                class="form-input"
                            >
                                <option value="">Elegí</option>
                                <% let options = ['ofertas','productos-destacados'] %> 
                                <% for (const oneOption of options) { %>
                                    <option 
                                        value="<%= oneOption %>"
                                        <%= (oneOption === productoBuscado.category) ? 'selected' : null %> 
                                    > <%= oneOption %> </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="col-12">
                            <label for="description" class="form-label">Descripción:</label>
                            <textarea name="description" id="description" class="form-input"><%= productoBuscado.description %></textarea>
                        </div>
                        <div class="col-12 col-md-6">
                            <label for="image" class="form-label">Imagen del producto:</label>
                            <input type="file" id="image" name="image">
                        </div>

                        <div class="col-12">
                            <button type="submit" class="buy-now-button">Guardar producto</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
        <%- include('partials/footer.ejs') %>
    </body>
</html>