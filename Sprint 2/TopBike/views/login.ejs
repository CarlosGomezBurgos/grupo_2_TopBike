<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/login.css">
    </head>
    <body>
        <%- include('partials/header.ejs') %>

        <h3>INICIO DE SESIÓN</h3>
        <form action="/user/login" method="post">
            <label for="email">Usuario</label>
            <input 
                type="email" 
                id="email"
                placeholder="Ingresar email" 
                name="email"
                value="<%= locals.oldData ? oldData.email : null %>"
            >
            <h6 class="errors">
                <% if (locals.errors && errors.email) { %>
                    <%= errors.email.msg %>
                <% } %>
            </h6>

            <label for="password">Contraseña</label>
            <input 
                type="password" 
                id="password"
                placeholder="Ingresar contraseña" 
                name="user_password"
            >
            <h6 class="errors">
                <% if (locals.errors && errors.user_password) { %>
                    <%= errors.user_password.msg %>
                <% } %>
            </h6>
            
            <label for="">--> Recordame <--</label>
            <input type="checkbox" name="recordame">
            <button type="submit">INICIAR SESIÓN</button>

            <h4>¿ No tenés cuenta ?</h4>
            <a href="/user/register">
                <label for="check-register"></label>CREAR CUENTA
            </a>                
        </form>
        <div class="errors" style="color: orange;">
            <ul>
            </ul>
        </div>
        <script src="/js/loginValidation.js"></script>
        <%- include('partials/footer.ejs') %>
    </body>
</html>