<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/css/register.css">
</head>
<body>
    <%- include('partials/header.ejs') %>
    <div class="carrusel">
        <img src="/img/carrusel.jpg" alt="carrusel" class="carrusel-foto">
    </div>    

    <h3>FORMULARIO DE REGISTRO</h3>
    <form action="/user/register" method="post" enctype="multipart/form-data">
        <label for="name">Nombre Completo</label>
        <input 
            type="text" 
            id="name" 
            name="user_name" 
            value="<%= locals.oldData ? oldData.user_name : null %>"
        >
        <% if (locals.errors && errors.user_name) { %>
            <p><%= errors.user_name.msg %> </p>
        <% } %>

        <label for="email">Correo Electronico</label>
        <input 
            type="email" 
            id="email" 
            name="email"
            value="<%= locals.oldData ? oldData.email : null %>"
        >
        <% if (locals.errors && errors.email) { %>
            <p><%= errors.email.msg %> </p>
        <% } %>

        <label for="password">Contrase√±a</label>
        <input 
            type="password" 
            id="password" 
            name="user_password"
        >
        <% if (locals.errors && errors.user_password) { %>
            <p><%= errors.user_password.msg %> </p>
        <% } %>

        <label for="avatar">Imagen de perfil</label>
        <input class="input-imagen"
            type="file"  
            id="avatar"   
            name="avatar"
        >
        <% if (locals.errors && errors.avatar) { %>
            <p><%= errors.avatar.msg %> </p>
        <% } %>

        <button type="submit">REGISTRARSE</button>
    </form>
    <%- include('partials/footer.ejs') %>
</body>
</html>