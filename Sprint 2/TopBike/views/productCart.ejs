<!DOCTYPE html>
<html lang="es">
    <head>
    <%- include('partials/head.ejs') %>
    <link rel="stylesheet" href="/css/cart.css">
    </head>
    <body>
        <%- include('partials/header.ejs') %>
        <main>
            <br> <br>
            <section class="cart-main">
                <h3 class="cart-titulo">Carrito de Compras</h3>
                <h2 style="color: white"> Usuario: <%= user.name %></h2><br>
                <h2 style="color: orange"> Lista de Productos</h2><br>

                <% carts.forEach(cart => { %>
                    <% if (cart.id_user == user.id) { %>
                     
                        <% products.forEach(product => { %>
                            <% if (cart.id_product == product.id) { %>
                                <p style="color: white; font-size: 24px;"> Nombre: <%= product.name  %>  </p>
                                <p style="color: white; font-size: 24px;"> Cantidad: <%= cart.quantity  %>  </p>
                                <br>
                            <% } %>


                        <% }) %>


                    <% } %>



                <% }) %>



            </section>
        </main>
        <%- include('partials/footer.ejs') %>
    </body>
</html>