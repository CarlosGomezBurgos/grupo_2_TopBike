<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('partials/head.ejs') %>
        <link rel="stylesheet" href="/css/profile.css">
    </head>
    <body>
        <%- include('partials/header.ejs') %>
        <main>
            <h2>Hola <%= user.name %> !</h2>
            <h3>Email: <%= user.email %> </h3>
            <div class="productDetail-foto">
                <img class="imagen" src="/img/avatars/<%= user.picture %> " alt="miniatura">
            </div>
        </main>

        <a href="/user/edit/<%= user.id %>">
            <button type="submit" class="buy-now-button">Editar Perfil</button>
        </a>

        

        <form action="" method="POST">
            <button type="submit" class="buy-now-button">Eliminar Perfil</button>
        </form>
        <%- include('partials/footer.ejs') %>
    </body>
</html>

